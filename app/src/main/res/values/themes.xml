<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ColloboStation" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="Theme.ColloboStation" parent="Base.Theme.ColloboStation" />

    <style name="home_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- EditText의 밑줄을 제거하는 스타일 -->
    <style name="EditTextNoUnderline" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- 힌트 텍스트의 색상 -->
        <item name="android:textColorHint">#FFFFFF</item>
        <!-- 서치뷰의 밑줄 색상 -->
        <item name="colorControlNormal">#FFFFFF</item>
        <!-- 서치뷰의 포커스된 밑줄 색상 -->
        <item name="colorControlActivated">#FFFFFF</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item> <!-- 텍스트 크기를 조정합니다 -->
    </style>
    <style name="TabTextIDPW" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item> <!-- 텍스트 크기를 조정합니다 -->
    </style>
</resources>