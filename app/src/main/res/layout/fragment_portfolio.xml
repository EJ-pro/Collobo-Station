<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 대학 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대학 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_university_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="대학을 입력하세요"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/portfolio_university_edit"/>

        <!-- 현재 경력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경력 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_current_career_text"/>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/portfolio_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 경력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 상태 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_now_career_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="현재 경력을 입력하세요"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/portfolio_now_career_edit"/>

        <!-- 링크 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="링크 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_link_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="링크를 입력하세요"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/portfolio_link_edit"/>

        <!-- 자기소개 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자기소개 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_introduction_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="자기소개를 입력하세요"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:id="@+id/portfolio_introduction_edit"/>

        <!-- 이미지 링크 소개 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미지 링크 :"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/portfolio_image_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이미지 넣는곳임"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:id="@+id/portfolio_image_edit"/>

        <!-- 수정 버튼 -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정"
            android:id="@+id/portfolio_modify_button"/>
    </LinearLayout>
</ScrollView>
