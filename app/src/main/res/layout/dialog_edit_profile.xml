<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 닉네임 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 이름 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 생년월일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="생년월일 입력 (예: YYYY-MM-DD)"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 연락처 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="연락처 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 주소 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주소 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 학력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학력"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="학력 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- 학년 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학년"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_edit_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="학년 입력"
                android:padding="10dp"
                android:background="@drawable/edittext_background" />
        </LinearLayout>
        <!-- Awards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수상 경력 (Awards)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <!-- Awards 동적 입력 목록 -->
            <LinearLayout
                android:id="@+id/awards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 동적 항목이 추가될 영역 -->
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수상 경력 추가"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="#3F51B5"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Skills -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기술 스택 (Skills)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="4dp" />

            <!-- Skills 동적 입력 목록 -->
            <LinearLayout
                android:id="@+id/skills_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 동적 항목이 추가될 영역 -->
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기술 스택 추가"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="#3F51B5"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
