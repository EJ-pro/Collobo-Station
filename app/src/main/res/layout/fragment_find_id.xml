<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_background"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="40dp">


    <EditText
        android:id="@+id/findid_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:backgroundTint="@color/maincolor"
        android:textColorHint="@color/black"
        android:hint="이메일"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/findid_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:backgroundTint="@color/maincolor"
            android:textColorHint="@color/black"
            android:hint="전화번호"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/findid_ph_ckbtn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:background="@drawable/create_button_background"
            android:text="인증번호 전송"
            android:textColor="@color/maincolor"
            android:textSize="10sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/findid_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="30"
            android:backgroundTint="@color/maincolor"
            android:textColorHint="@color/black"
            android:hint="인증번호"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/findid_code_ckbtn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:background="@drawable/create_button_background"
            android:text="확인"
            android:textColor="@color/maincolor"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/findid_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/create_button_background_full"
        android:text="다음"
        android:textColor="@color/black"
        android:textStyle="bold" />


</LinearLayout>