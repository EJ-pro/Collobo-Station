<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리를 그리는 아이템 -->
    <item>
        <shape>
            <!-- 테두리 그라데이션 설정 -->
            <gradient
                android:startColor="#A3A3A3"
                android:endColor="#272727"
                android:angle="0" />
            <!-- 코너 설정 -->
            <corners android:radius="27dp" />
        </shape>
    </item>
    <!-- 배경을 그리는 아이템 -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <!-- 배경 그라데이션 설정 -->
            <gradient
                android:startColor="#000000"
                android:endColor="#262626"
                android:angle="0" />
            <!-- 코너 설정 -->
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
